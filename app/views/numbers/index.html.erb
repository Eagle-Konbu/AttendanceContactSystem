<h1>ナンバー</h1>

<table class="table table-striped text-nowrap">
  <thead>
    <tr>
      <th>M名</th>
      <th>Mリーダー1</th>
      <th>Mリーダー2</th>
      <th>Mリーダー3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @numbers.each do |number| %>
      <tr>
        <td><%= number.name %></td>
        <td><%= Member.find_by(id: number.leader_member_id_1)&.nickname %></td>
        <td><%= Member.find_by(id: number.leader_member_id_2)&.nickname %></td>
        <td><%= Member.find_by(id: number.leader_member_id_3)&.nickname %></td>
        <td><%= link_to 'Show', number %></td>
        <td><%= link_to 'Edit', edit_number_path(number) %></td>
        <td><%= link_to 'Destroy', number, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

