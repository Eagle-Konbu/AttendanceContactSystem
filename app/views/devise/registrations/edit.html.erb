<h2>アカウント情報変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='form-group'>
    <label for="user_id"><%= f.label :user_id %></label>
    <%= f.text_field :user_id, autofocus: true, class:'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :nickname %>
    <%= f.text_field :nickname, autofocus: true, class:'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
  </div>
  <div class='form-group form-check'>
    <%= f.check_box :receive_email %>
    <label for="receive_email">メールを受け取る</label>
  </div>
  <div class='form-group'>
    <label for="current_password">現在のパスワード(入力必須)</label>
    <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control' %>
  </div>
  <div class='form-group'>
    <label for="password">
      新しいパスワード (変更しない場合は空欄
      <% if @minimum_password_length %>
        最小<%= @minimum_password_length %>文字)
      <% end %>
    </label>
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
  </div>
  <div class='form-group'>
    <label for="password_confirmation">新しいパスワード(確認)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class:'btn btn-primary' %><br><br>
    <%= link_to "戻る", "/executive/index", class:'btn btn-primary' %>
  </div>

<% end %>
<br>
<div class='alert alert-danger'>
<h3>取り扱い注意！！</h3>
<br>
<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "アカウントを削除します．本当によろしいですか？" }, method: :delete, class:'btn btn-danger' %>
</div>